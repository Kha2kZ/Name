{
  "enabled": true,
  "bot_detection": {
    "enabled": true,
    "min_account_age_days": 7,
    "check_profile_picture": true,
    "check_username_patterns": true,
    "suspicious_patterns": [
      "^[a-z]+\\d{4,}$",
      "^.{1,3}$",
      "discord\\.gg",
      "bit\\.ly",
      "free.*nitro",
      "nitro.*free",
      "discord.*gift",
      "steam.*gift",
      "free.*game"
    ],
    "action": "quarantine"
  },
  "spam_detection": {
    "enabled": true,
    "max_messages_per_window": 5,
    "time_window_seconds": 10,
    "max_duplicate_messages": 3,
    "check_mention_spam": true,
    "max_mentions_per_message": 5,
    "check_link_spam": true,
    "suspicious_domains": [
      "bit.ly",
      "tinyurl.com", 
      "ow.ly",
      "t.co",
      "discord-nitro",
      "free-discord",
      "steam-gift"
    ],
    "action": "timeout"
  },
  "raid_protection": {
    "enabled": true,
    "max_joins": 10,
    "time_window": 60,
    "action": "lockdown"
  },
  "verification": {
    "enabled": false,
    "require_for_new_accounts": true,
    "new_account_threshold_days": 7,
    "verification_timeout_minutes": 10,
    "quarantine_role": "Unverified",
    "auto_verify_after_hours": 24
  },
  "logging": {
    "enabled": true,
    "channel_id": null,
    "log_joins": true,
    "log_leaves": true,
    "log_kicks": true,
    "log_bans": true,
    "log_timeouts": true,
    "log_detections": true,
    "log_moderation": true
  },
  "moderation": {
    "log_actions": true,
    "require_reason": false,
    "max_mute_duration": 2419200,
    "default_timeout_duration": 300,
    "delete_command_messages": true,
    "dm_users_on_action": true
  },
  "whitelist": {
    "users": [],
    "roles": [],
    "bypass_verification": []
  },
  "thresholds": {
    "suspicion_score_kick": 70,
    "suspicion_score_ban": 85,
    "spam_score_timeout": 70,
    "raid_detection_sensitivity": "medium"
  },
  "cooldowns": {
    "command_cooldown": 3,
    "moderation_cooldown": 5,
    "config_cooldown": 10
  },
  "auto_actions": {
    "delete_spam_messages": true,
    "auto_timeout_duration": 300,
    "escalation_enabled": true,
    "max_warnings_before_action": 3
  }
}
